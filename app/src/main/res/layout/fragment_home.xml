                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_16dp"
                        android:paddingLeft="@dimen/_16dp">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_welcome_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_14dp"
                            android:fontFamily="@font/gf_gilroy_medium"
                            android:text="@string/SCR_LBL_WELCOME_BACK"
                            android:textColor="@color/white_transparent"
                            android:textSize="@dimen/_13sp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2dp"
                            android:paddingBottom="@dimen/_20dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toStartOf="@+id/img_trees"
                                android:layout_toLeftOf="@+id/img_trees"
                                android:fontFamily="@font/gf_gilroy_bold"
                                android:text="@{profile.fname +' '+ profile.otherNames}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_28sp" />

                            <View
                                android:id="@+id/view_line"
                                android:layout_width="match_parent"
                                android:layout_height="2px"
                                android:layout_below="@+id/txt_user_name"
                                android:layout_marginTop="@dimen/_16dp"
                                android:background="@color/_E4E4E6" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/img_trees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/view_line"
                                android:layout_alignParentEnd="true"
                                android:visibility="gone"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_16dp"
                                app:srcCompat="@drawable/ic_trees" />


                        </RelativeLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_110dp"
                            android:background="@color/colorPrimary" />

<!--                        <RelativeLayout-->
<!--                            android:id="@+id/my_account_layout"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:paddingLeft="@dimen/_16dp"-->
<!--                            android:paddingRight="@dimen/_16dp">-->

<!--                            <androidx.appcompat.widget.AppCompatTextView-->
<!--                                android:id="@+id/txt_your_account"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_alignParentStart="true"-->
<!--                                android:layout_alignParentLeft="true"-->
<!--                                android:layout_centerVertical="true"-->
<!--                                android:fontFamily="@font/gf_gilory_semibold"-->
<!--                                android:text="@string/SCR_LBL_MY_ACCOUNTS"-->
<!--                                android:textAllCaps="true"-->
<!--                                android:textColor="@color/white"-->
<!--                                android:textSize="@dimen/_11sp" />-->

<!--                            <androidx.appcompat.widget.AppCompatTextView-->
<!--                                android:id="@+id/txt_view_all"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_alignParentEnd="true"-->
<!--                                android:layout_alignParentRight="true"-->
<!--                                android:layout_centerVertical="true"-->
<!--                                android:fontFamily="@font/gf_gilory_semibold"-->
<!--                                android:paddingLeft="@dimen/_10dp"-->
<!--                                android:paddingTop="@dimen/_4dp"-->
<!--                                android:paddingBottom="@dimen/_10dp"-->
<!--                                android:text="@string/SCR_LBL_DASHBOARD_HEADING_VIEW_ALL_UNDER_LINE"-->
<!--                                android:textAllCaps="true"-->
<!--                                android:textColor="@color/white"-->
<!--                                android:textSize="@dimen/_10sp" />-->

<!--                        </RelativeLayout>-->

<!--                        <androidx.viewpager.widget.ViewPager-->
<!--                            android:id="@+id/account_view_pager"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="@dimen/_150dp"-->
<!--                            android:layout_below="@+id/my_account_layout" />-->

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_16dp"
                        android:paddingRight="@dimen/_16dp">

                        <RelativeLayout
                            android:id="@+id/quick_transaction_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_16dp"
                            android:paddingBottom="@dimen/_16dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_quick_transaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gf_gilory_semibold"
                                android:text="@string/SCR_LBL_QUICK_TRANSACTION"
                                android:textAllCaps="true"
                                android:textColor="@color/_0082BA"
                                android:textSize="@dimen/_13sp" />


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/txt_quick_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/ic_quick_transaction_down" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/transact_grid_view"
                                android:layout_width="match_parent"
                                android:layout_marginBottom="@dimen/_16dp"
                                android:nestedScrollingEnabled="false"
                                android:layout_height="wrap_content">

                            </androidx.recyclerview.widget.RecyclerView>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/recent_activity_root_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14dp"
                        android:layout_marginBottom="@dimen/_16dp"
                        android:animateLayoutChanges="true"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:id="@+id/recent_down_layout"
                            android:layout_width="match_parent"
                            android:paddingTop="@dimen/_16dp"
                            android:paddingLeft="@dimen/_16dp"
                            android:paddingRight="@dimen/_16dp"
                            android:paddingBottom="@dimen/_16dp"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_your_activities"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gf_gilory_semibold"
                                android:text="@string/SCR_LBL_YOUR_ACTIVITY"
                                android:textAllCaps="true"
                                android:textColor="@color/_0082BA"
                                android:textSize="@dimen/_13sp" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/txt_recent_event_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/ic_quick_transaction_down" />
                        </RelativeLayout>



                        <LinearLayout
                            android:id="@+id/recent_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8dp"
                            android:orientation="vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/promotional_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14dp"
                        android:layout_marginBottom="@dimen/_16dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_16dp"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_get_started"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gf_gilory_semibold"
                            android:text="@string/BTN_GET_STARTED"
                            android:textAllCaps="true"
                            android:textColor="@color/_0082BA"
                            android:textSize="@dimen/_13sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:elevation="@dimen/_6dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/rl_invite_friends"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_16dp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/img_invite_friend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ic_invite_friend" />


                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/img_invite_friend_right_arrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ic_right_arrow" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_16dp"
                                    android:layout_marginRight="@dimen/_16dp"
                                    android:layout_toStartOf="@+id/img_invite_friend_right_arrow"
                                    android:layout_toLeftOf="@+id/img_invite_friend_right_arrow"
                                    android:layout_toEndOf="@+id/img_invite_friend"
                                    android:layout_toRightOf="@+id/img_invite_friend"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/txt_invite_friend_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/gf_gilroy_medium"
                                        android:text="@string/SCR_LBL_INVITE_AND_GET_MONEY"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/txt_invite_friend_message"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_4dp"
                                        android:fontFamily="@font/gf_gilroy_medium"
                                        android:text="@string/SCR_LBL_SIGN_UP_AND_GET_MONEY"
                                        android:textColor="@color/_4A4A4A"
                                        android:textSize="@dimen/_10sp" />

                                </LinearLayout>


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_share_app"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8dp"
                            android:background="?attr/selectableItemBackground"
                            android:elevation="@dimen/_6dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/rl_share_app"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_16dp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/img_share"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ic_share_app" />


                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/img_share_app_right_arrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ic_right_arrow" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_16dp"
                                    android:layout_marginRight="@dimen/_16dp"
                                    android:layout_toStartOf="@+id/img_share_app_right_arrow"
                                    android:layout_toLeftOf="@+id/img_share_app_right_arrow"
                                    android:layout_toEndOf="@+id/img_share"
                                    android:layout_toRightOf="@+id/img_share"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/txt_share_app_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/gf_gilroy_medium"
                                        android:text="@string/SCR_LBL_SHARE_ECO_MOBILE"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/txt_share_app_message"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_4dp"
                                        android:fontFamily="@font/gf_gilroy_medium"
                                        android:text="@string/SCR_LBL_SHARE_ECO_MOBILE_DESCRIPTION"
                                        android:textColor="@color/_4A4A4A"
                                        android:textSize="@dimen/_10sp" />

                                </LinearLayout>


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            style="@style/Theme.AppCompat.Light"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:elevation="6dp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/ll_ActionBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:layout_collapseMode="pin"
                    app:title="" />

                <RelativeLayout
                    android:id="@+id/small_circle_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_16dp">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/header_profile_image"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        android:src="@drawable/ic_details_validated"
                        app:civ_border_width="0dp" />

                    <androidx.appcompat.widget.AppCompatImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/header_profile_image"
                        android:layout_alignRight="@+id/header_profile_image"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_red_oval" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/header_change_profile_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:layout_marginRight="@dimen/_16dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_header_profile_flag"
                        android:layout_width="@dimen/_22dp"
                        android:layout_height="@dimen/_18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_16dp"
                        android:gravity="center_vertical"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        app:srcCompat="@drawable/ic_down_arrow_home" />

                </LinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textView_header_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/_16dp"
                    android:fontFamily="@font/gf_gilory_semibold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    android:visibility="visible" />
            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>
    </RelativeLayout>
</layout>
