<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <data>
            <variable name="profile" type="com.skills.rentaride.model.ProfileDTO"/>
        </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:background="@color/_EFEFF4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorPrimaryDark">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16dp"
                            android:layout_marginTop="@dimen/_20dp">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_image"
                                android:layout_width="@dimen/_44dp"
                                android:layout_height="@dimen/_42dp"
                                android:src="@drawable/ic_details_validated"
                                app:civ_border_width="0dp" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/profile_image"
                                android:layout_alignRight="@+id/profile_image"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_red_oval" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/change_profile_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_20dp"
                            android:layout_marginEnd="@dimen/_16dp"
                            android:layout_marginRight="@dimen/_16dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!--                        <androidx.appcompat.widget.AppCompatImageView-->
                            <!--                            android:id="@+id/img_profile_flag"-->
                            <!--                            android:layout_width="@dimen/_26dp"-->
